{
  "name": "conventional-shields",
  "version": "0.1.1",
  "description": "Conventional comments meets Shields.io",
  "main": "dist/index.js",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "pnpm prepare:extension",
    "dev": "tsc --watch",
    "prepare:extension": "tsc && mkdir -p src/extension/lib && mkdir -p src/extension/lib/config && cp dist/index.js src/extension/lib/index.js && cp dist/config/palette.json src/extension/lib/config/palette.json && cp dist/index.d.ts src/extension/lib/index.d.ts",
    "build:extension": "node scripts/build-extension.js",
    "build:extension:bundle": "node scripts/build-extension-bundled.js"
  },
  "keywords": [
    "conventionalComments",
    "codeReview",
    "shields",
    "shields.io",
    "shields.io-badge",
    "badges"
  ],
  "author": "Virgil ROGER<roger.virgil@gmail.com>",
  "license": "CC-BY-SA-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/V-Roger/conventional-shields"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  },
  "files": [
    "dist/"
  ]
}
